{
  "name": "trek",
  "version": "0.0.0",
  "description": "Fast Async Web Framework For Modern Node.js",
  "author": "Fangdun Cai <cfddream@gmail.com> (https://github.com/fundon)",
  "homepage": "https://trekjs.com/",
  "repository": "trekjs/trek",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "async",
    "async/await",
    "framework",
    "middleware",
    "mvc",
    "rest",
    "server",
    "trek",
    "web"
  ],
  "scripts": {
    "bench": "cd benchmarks; make all",
    "build": "rm -rf dist; xo && babel lib --out-dir dist",
    "clean": "rm -rf coverage .nyc_output",
    "lint": "xo",
    "prepublish": "npm run build",
    "test": "xo && nyc --reporter=lcov ava -r babel-register -c 5",
    "test:watch": "xo && nyc --reporter=lcov ava -r babel-register --watch"
  },
  "dependencies": {
    "dotenv": "2.0.0",
    "globby": "6.0.0",
    "interop-require": "1.0.0",
    "lodash.get": "4.4.2",
    "lodash.has": "4.5.2",
    "lodash.set": "4.3.2",
    "pino": "2.12.3",
    "trek-engine": "0.4.5",
    "trek-middleware": "1.1.0",
    "trek-router": "1.1.1"
  },
  "devDependencies": {
    "async-to-gen": "1",
    "ava": "0",
    "babel-cli": "6",
    "babel-plugin-transform-async-to-generator": "6",
    "babel-plugin-transform-es2015-modules-commonjs": "6",
    "babel-plugin-transform-export-extensions": "6",
    "babel-preset-es2016": "6",
    "babel-register": "6",
    "nyc": "8",
    "parseurl": "1",
    "request": "2",
    "request-promise": "4",
    "xo": "0"
  },
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "lib"
  ],
  "babel": {
    "plugins": [
      "transform-async-to-generator",
      "transform-es2015-modules-commonjs",
      "transform-export-extensions"
    ],
    "presets": [
      "es2016"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [
      "benchmarks/*.js"
    ],
    "rules": {
      "babel/arrow-parens": [
        2,
        "as-needed"
      ],
      "babel/object-curly-spacing": 0,
      "curly": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
